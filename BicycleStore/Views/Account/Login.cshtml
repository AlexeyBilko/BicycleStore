@{
}

<h2>Login</h2>

<form style="margin-top:50px;"sp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div>
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <input style="margin-top: 20xp;" type="submit" value="Login" class="btn btn-primary"/>
    </div>
</form>
<a style="margin-top: 10px;" asp-controller="Account" asp-action="Register" class="btn btn-primary">Register</a>